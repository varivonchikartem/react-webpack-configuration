{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "strict": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
